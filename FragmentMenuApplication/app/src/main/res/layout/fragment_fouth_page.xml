<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".FouthPage">


    <TextView
        android:id="@+id/textViewNumberPicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Number Picked"
        android:textSize="30sp"
        android:layout_marginTop="140dp"/>

    <NumberPicker
        android:id="@+id/number_picked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewNumberPicked" />

    <TextView
        android:id="@+id/textViewCountryPicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Contry Picked"
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        android:layout_below="@id/number_picked"/>

    <NumberPicker
        android:id="@+id/city_picked"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewCountryPicked" />
</RelativeLayout>