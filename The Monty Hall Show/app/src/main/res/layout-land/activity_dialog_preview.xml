<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_fon"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:layout_margin="10dp"
    android:background="@color/violet"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/button_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="&lt;"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/whiteButton"
            android:layout_gravity="start"
            android:background="@drawable/style_btn_close_dialog"
            />

        <TextView
            android:id="@+id/text_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_preview_text"
            android:layout_weight="30"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/button_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Continue"
            android:layout_weight="5"
            android:textColor="#EBEBEB"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/style_button_continue_dialog"/>


    </LinearLayout>
</LinearLayout>